<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mania.quest.questmania.QuestProgressActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.01"
        >
        <Button
            android:id="@+id/map_view_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Map"
            android:background="?android:attr/selectableItemBackground"
            android:layout_weight="1"
            android:onClick="onMapViewClick"
            />
        <Button
            android:id="@+id/list_view_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="List"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="onListViewClick"
            />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15.06"
        tools:context="com.mania.quest.questmania.QuestProgressActivity" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/quest_progress_list"
        android:layout_weight="3"
        />

</LinearLayout>

